datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Phone {
  // id     String @id @default(auto()) @map("_id") @db.ObjectId  //mongodb
  // id     Int     @id @default(autoincrement())   //sql
  id      String  @id @default(uuid()) // для совметсимости с mongodb
  number  String @unique
  name    String
  address String ?
}